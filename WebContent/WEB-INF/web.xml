<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>THESIS-ISPROJ2-PROJECT</display-name>
    <welcome-file-list>
    <welcome-file>Home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>thesis.mvc.controller.RegistrationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/RegistrationController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>thesis.mvc.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>PurchaseController</servlet-name>
  	<servlet-class>theisis.mvc.controller.PurchaseController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>PurchaseController</servlet-name>
  	<url-pattern>/PurchaseController/*</url-pattern>
  </servlet-mapping>
<error-page>
	<exception-type>java.lang.Exception</exception-type>
	<location>/customError.jsp</location>
</error-page>

<error-page>
	<error-code>404</error-code>
	<location>/serverError.jsp</location>
</error-page>
</web-app>

